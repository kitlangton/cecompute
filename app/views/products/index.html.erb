<h1 class="page-header text-center small-12 medium-8 large-5 small-centered row"><span id="stop-1">Products</span></h1>


<div class="products-container" id="container">
  
<% @products.each do |product| %>
  <div class="product-container item" >

    <div class="product-link">
      
      <%= link_to product do  %>
    <div  class="product-image">
      <%= image_tag product.image_url(:thumb), id:"stop-2"  %>
    </div>

    <div class="product-name">
      <strong  id="stop-3"><%= product.name  %></strong>
    <% end %>
    </div>
    </div>

    <div class="prices">
    <div class="base-cost">
      <span id="stop-4"><%= number_to_currency(product.base_cost) %></span>
    </div>
    </div>

    <% if current_user.try(:admin)  %>
    <div class="admin-opts">
      <li>
      <%= link_to "Edit", edit_product_path(product)  %>
</li>
      <li>
      <%= link_to "Delete", product_path(product), confirm: "Are you sure?", method: :delete  %>
</li>
    </div>
  <% end  %>

  </div>
<% end %>

</div>

<div id="JoyrideDiv">
  
<ol class="joyride-list" data-joyride>
  <li data-id="stop-1" data-text="Next" data-options="tip_location: top; prev_button: false">
    <p><h4>Hello!</h4> Welcome to the <strong>Coloredge Composer</strong>'s Product list.</p>
  </li>
  <li data-id="stop-2" data-class="custom so-awesome" data-text="Next" data-prev-text="Prev" data-options="tip_location: left">
    <p> <h4>Product Image</h4> The Product list shows on image of each product.</p>
  </li>
  <li data-id="stop-3" data-class="custom so-awesome" data-text="Next" data-prev-text="Prev" data-options="tip_location: right;tipAdjustmentY:-22px;tipAdjustmentX:14px">
    <p> <h4>Product Name</h4> Here is the Product name.</p>
  </li>
  <li data-id="stop-4" data-class="custom so-awesome" data-text="Next" data-prev-text="Prev" data-options="tip_location: right;tipAdjustmentY:-22px;tipAdjustmentX:14px">
    <p> <h4>Base Cost</h4> And here is the Product's base cost.</p>
  </li>
  <li data-button="End" data-prev-text="Prev">
    <p><h4>Estimation</h4>Click into a Product to estimate prices.</p>
  </li>
</ol>

</div>
