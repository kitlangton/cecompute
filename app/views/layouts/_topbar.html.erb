      <ul class="right">
      <li class="has-dropdown">
        <a >
          <a >ADMIN MODE</a>
        </a>
        <ul class="dropdown">
          <li>
            <%= link_to "Create Product", new_product_path  %>
          </li>
          <li>
            <%= link_to "Create User", new_user_path  %>
