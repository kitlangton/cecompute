        </ul>
      </li>
    </ul>
  <% else %>
      <ul class="right">
      <li >
        <%= link_to "My Orders", user_orders_path  %>
      </li>
      <li>
        <%= link_to "Sign up", new_user_registration_path %>
      </li>
      <li class="active">
